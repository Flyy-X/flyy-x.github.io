---
import i18next from "i18next";
import {localizeUrl} from "astro-i18next";
import {SITE} from "astrowind:config";

const supportedLanguages = i18next.languages;
const currentUrl = new URL(Astro.url.pathname, SITE.site).href;
---

{
  supportedLanguages.map(
    (supportedLanguage) => (
    <link
      rel="alternate"
      hreflang={supportedLanguage}
      href={localizeUrl(currentUrl, supportedLanguage)} />
    )
  )
}
{
  <link
    rel="alternate"
    hreflang="x-default"
    href={localizeUrl(currentUrl, i18next.defaultLocale)} />
}
